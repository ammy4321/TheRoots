<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mdtp_white"
    android:clickable="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        tools:layout_editor_absoluteX="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="560dp">


            <ImageButton
                android:id="@+id/imageButton1"
                android:layout_width="81dp"
                android:layout_height="86dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="13dp"
                android:layout_marginTop="44dp"
                android:background="@color/mdtp_white"
                android:scaleType="fitCenter"
                app:srcCompat="@mipmap/creative_logo" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="83dp"
                android:layout_height="81dp"
                android:layout_alignBottom="@+id/imageButton1"
                android:layout_alignStart="@+id/imageButton7"
                android:background="@color/mdtp_white"
                android:scaleType="fitCenter"
                app:srcCompat="@mipmap/theatre_logo" />

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="88dp"
                android:layout_height="82dp"
                android:layout_alignBottom="@+id/imageButton1"
                android:layout_centerHorizontal="true"
                android:background="@color/mdtp_white"
                android:scaleType="fitCenter"
                app:srcCompat="@mipmap/train_logo" />

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="91dp"
                android:layout_height="88dp"
                android:layout_alignTop="@+id/imageButton5"
                android:layout_centerHorizontal="true"
                android:background="@color/mdtp_white"
                android:scaleType="fitCenter"
                app:srcCompat="@mipmap/films_logo" />

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="84dp"
                android:layout_height="89dp"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/imageButton1"
                android:layout_marginTop="210dp"
                android:background="@color/mdtp_white"
                android:scaleType="fitCenter"
                app:srcCompat="@mipmap/platform_logo" />

            <ImageButton
                android:id="@+id/imageButton7"
                android:layout_width="100dp"
                android:layout_height="86dp"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/imageButton4"
                android:background="@color/mdtp_white"
                android:scaleType="centerCrop"
                app:srcCompat="@mipmap/initiative_logo" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:background="#f5ebeb"
                android:src="@drawable/ic_action_add" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="96dp"
                android:layout_height="39dp"
                android:layout_alignStart="@+id/imageButton1"
                android:layout_alignTop="@+id/textView2"
                android:fontFamily="@font/aclonica"
                android:text="Creative Consultancy"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="90dp"
                android:layout_height="31dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="143dp"
                android:fontFamily="@font/aclonica"
                android:text="Training" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/textView"
                android:layout_marginEnd="33dp"
                android:fontFamily="@font/aclonica"
                android:text="Theatre" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="310dp"
                android:fontFamily="@font/aclonica"
                android:text="Platform" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageButton7"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="13dp"
                android:fontFamily="@font/aclonica"
                android:text="Films" />

            <TextView
                android:layout_width="101dp"
                android:layout_height="wrap_content"
             android:layout_marginStart="285dp"
                android:layout_marginTop="310dp"
                android:fontFamily="@font/aclonica"
                android:text="Initiatives" />
        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
